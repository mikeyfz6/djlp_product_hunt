					<li><a href="#" class = "nav_items"><i class="fa fa-chevron-right" aria-hidden="true"></i></a></li>
				</ul>		
			</nav>
			</div>
		</div>
				<div class="main_content_wrapper">
			<div class="main_content">
					<%= yield %>
				<div class="sidebar">
					<div class="side_box">
							<div class = "items">
								<h3 class = "side_box_title">Product Hunt for Chrome</h3>
								<p class="side_box_discription">A lovely Chrome extension we think you'll love.</p>
								<button class="side_box_btn"><i class="fa fa-chrome" aria-hidden="true"></i> One click install</i></button>
						</div>
				</div>
				<div class="chat_bar">
					<div class="chat_header_wrap">
						<h5>Up and coming live chats</h5>
						<i class="fa fa-times exit_icon" aria-hidden="true"></i>
					</div>
						<div class="chat_items_wrap">
							<img src = "https://placekitten.com/200/300" class=" chat_img">
