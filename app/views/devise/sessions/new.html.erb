<div class ="login_wrap">
  <h2 class = "login_header">Log in</h2>
  <div>
    <div>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
       <fieldset>
          <%= f.label :email, class: "email" %>
          <%= f.email_field :email, autofocus: true, class: "email" %>
          <%= f.label :password, class: "password" %>
          <%= f.password_field :password, autocomplete: "off", class: "password" %>

        <% if devise_mapping.rememberable? -%>
          
            <%= f.check_box :remember_me, class: "check_box"%>
            <%= f.label :remember_me, class: "check_box" %>
        <% end -%>
      </fieldset>
        <div class="actions">
          <%= f.submit "Log in" %>
        </div>
      <% end %>
     
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
